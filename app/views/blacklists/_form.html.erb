<% @blacklist.errors.full_messages.each do |message| %>
  <div class="alert alert-warning" role="alert">
  <%= message %>
  </div>
<% end %>

<%= form_with model: blacklist, class: 'mt-4', local: true do |f| %>
  <div class="form-group">
    <%= f.label :word, 'Digite a palavra' %>
    <%= f.text_field :word, class: 'form-control col-md-6' %>
  </div>
  <%= f.submit 'Enviar', class: 'btn btn-secondary' %>
<% end %>
